
.check-row {
	position: absolute;
	top: 0rpx;
	bottom: 0rpx;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.person-list {
	width: 100%;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	box-sizing: border-box;
	padding: 20rpx 0;
}
.check-button {
	width: 100%;
	height: 100rpx;
	background-color: #409EFF;
	line-height: 100rpx;
	font-size: 14px;
	text-align: center;
	color: #ffffff;
	letter-spacing: 3px;
}
.check-title {
	width: 100%;
	height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	border-bottom: 1px solid #DCDFE6;
}
.check-title-kid {
	height: 80rpx;
	width: 25%;
	line-height: 80rpx;
	text-align: center;
}
.steptitle {
	text-align: justify;
	padding-right: 30rpx;
	font-size: 30rpx;
	position: relative;
	height: 60rpx;
	line-height: 60rpx;
	width: 200rpx;
}
.stepFlex {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: right;
}

